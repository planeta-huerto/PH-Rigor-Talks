{
  "name": "planeta-huerto/rigor-talk-temperature",
  "license": "MIT",
  "type": "project",
  "description": "Skeleton for Temperature refactoring",

  "require": {
    "php": "5.6.*",
    "ext-sqlite3": "*",
    "pimple/pimple": "~3.0",
    "symfony/console": "v3.4.26",
    "guzzlehttp/guzzle": "6.*",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5"
  },
  "autoload": {
    "psr-4": {
      "PH\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PH\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
