{
  "name": "planeta-huerto/rigor-talk-temperature",
  "license": "MIT",
  "type": "project",
  "description": "Skeleton for Temperature refactoring",


  "repositories": [{
    "type": "composer",
    "url": "https://satis.planetahuerto.es",
    "options": {
      "ssl": {
        "verify_peer": false,
        "verify_peer_name": false,
        "allow_self_signed": true
      }
    }
  }],

  "require": {
    "php": "5.6.*",
    "curl/curl": "^2.2",
    "friendsofphp/php-cs-fixer": "^2.14",
    "pimple/pimple": "~3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5"
  },
  "autoload": {
    "psr-4": {
      "PH\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PH\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
