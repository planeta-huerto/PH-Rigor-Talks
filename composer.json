{
  "name": "planeta-huerto/rigor-talk-temperature",
  "license": "MIT",
  "type": "project",
  "description": "Skeleton for Temperature refactoring",

  "require": {
    "php": "7.0.*",
    "ext-sqlite3": "*",
    "pimple/pimple": "^3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^5"
  },
  "autoload": {
    "psr-4": {
      "PH\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PH\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
